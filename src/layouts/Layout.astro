---
import Header from '../components/shared/header/header.component.astro'
import Footer from '../components/shared/footer/footer.component.astro'
import { ClientRouter } from 'astro:transitions'

interface Props {
  title?: string
  description?: string
}

const {
  title = 'Fix My Card - Restauration de cartes Pokémon',
  description = 'Restauration professionnelle de cartes Pokémon : nettoyage, retouche, correction des dégâts et finition experte pour redonner éclat, valeur et authenticité à vos cartes de collection. Découvrez mes prestations et mes réalisations.',
} = Astro.props

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const ogImage = new URL('/fix-my-card.webp', Astro.site)
---

<!doctype html>
<html lang="fr" class="w-full h-full overflow-hidden">
  <head>
    <!-- Google Tag Manager -->
    <script>
      ;(function (w, d, s, l, i) {
        w[l] = w[l] || []
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' })
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : ''
        j.async = true
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
        f.parentNode.insertBefore(j, f)
      })(window, document, 'script', 'dataLayer', 'GTM-PQLC3BTC')
    </script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="Fix My Card" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:width" content="1200" />
    <meta name="twitter:image:height" content="630" />
    <meta name="theme-color" content="#9333ea" />
    <meta name="author" content="Charlotte Vandenbroucke - Fix My Card" />
    <meta name="robots" content="index, follow" />
    <meta name="generator" content={Astro.generator} />
    <meta name="msvalidate.01" content="F0A399999C4F8A3560785AB44DBC07E1" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="m-0 w-full h-full overflow-hidden">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-PQLC3BTC"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <Header transition:persist />
    <div class="overflow-y-auto h-[calc(100%-64px)]">
      <slot />
      <Footer transition:persist />
    </div>
  </body>
</html>
