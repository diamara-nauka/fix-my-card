---
import { Image } from 'astro:assets'
import FixMyCard from '../../../assets/fix-my-card.png'
import Fix from '../../../assets/fix.png'
import My from '../../../assets/my.png'
import Card from '../../../assets/card.png'

const navItems = [
  { id: 'accueil', label: 'Accueil', href: '/' },
  { id: 'prestations', label: 'Mes prestations', href: '/prestations' },
  { id: 'realisations', label: 'Mes réalisations', href: '/realisations' },
  { id: 'devis', label: 'Demander un devis', href: '/devis' },
  { id: 'apropos', label: 'À propos', href: '/about' },
]
---

<nav class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="flex items-center gap-1">
        <Image
          src={FixMyCard}
          alt="Fix My Card"
          loading="eager"
          fetchpriority="high"
          quality={100}
          width={48}
          height={48}
          format="png"
          class="w-12 h-12"
        />
        <Image
          src={Fix}
          alt="Fix"
          loading="eager"
          fetchpriority="high"
          quality={100}
          width={47}
          height={27}
          format="png"
          class="h-[27px] w-[47px]"
        />
        <Image
          src={My}
          alt="My"
          loading="eager"
          fetchpriority="high"
          quality={100}
          width={44}
          height={31}
          format="png"
          class="h-[31px] w-[44px]"
        />
        <Image
          src={Card}
          alt="Card"
          loading="eager"
          fetchpriority="high"
          quality={100}
          width={64}
          height={34}
          format="png"
          class="h-[34px] w-[64px]"
        />
      </a>

      <div class="hidden md:flex space-x-8">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="text-gray-700 hover:text-blue-600 transition-colors
              font-medium"
            >
              {item.label}
            </a>
          ))
        }
      </div>

      <div class="md:hidden">
        <input type="checkbox" id="mobile-menu-toggle" class="peer hidden" />
        <label
          for="mobile-menu-toggle"
          class="cursor-pointer block peer-checked:hidden"
          aria-label="Open menu"
        >
          <svg
            class="w-6 h-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>

        <label
          for="mobile-menu-toggle"
          class="cursor-pointer hidden peer-checked:block"
          aria-label="Close menu"
        >
          <svg
            class="w-6 h-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              d="M6 6l12 12M6 18L18 6"></path>
          </svg>
        </label>

        <div
          class="hidden peer-checked:block absolute top-16 left-0 right-0
          bg-white shadow-lg pb-4 space-y-2 z-50 animate-slide-down"
        >
          {
            navItems.map((item) => (
              <a
                href={item.href}
                class="block w-full text-left px-4 py-2 transition-colors
                text-gray-700 hover:bg-gray-50 active:bg-gray-100"
              >
                {item.label}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</nav>
