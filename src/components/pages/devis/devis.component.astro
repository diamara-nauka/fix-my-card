---
import ImageContainer from './images-container.tsx'
import FormSubmitHandler from './form-submit-handler.tsx'
---

<div class="container mx-auto px-4 xl:px-80 py-8 pt-6 min-h-full">
  <h1 class="text-3xl font-bold mb-6">Contactez-moi</h1>
  <div id="status-loading" class="flex items-center gap-3 text-gray-600">
    <svg
      class="animate-spin h-5 w-5"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
    >
      <circle
        class="opacity-25"
        cx="12"
        cy="12"
        r="10"
        stroke="currentColor"
        stroke-width="4"></circle>
      <path
        class="opacity-75"
        fill="currentColor"
        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
      ></path>
    </svg>
    <p>Vérification de la disponibilité...</p>
  </div>

  <div
    id="status-closed"
    class="hidden bg-yellow-50 border border-yellow-200 rounded-lg p-6"
  >
    <p class="text-lg text-yellow-800">
      Les commandes sont actuellement fermées. Veuillez revenir plus tard.
    </p>
  </div>

  <div id="status-open" class="hidden">
    <p class="mb-6">
      Je vous ferai parvenir un devis dans les plus brefs délais
    </p>

    <form
      id="devis-form"
      name="contact"
      method="POST"
      enctype="multipart/form-data"
      class="space-y-6"
    >
      <input type="hidden" name="form-name" value="contact" />

      <div>
        <label for="name" class="block mb-2 font-semibold"
          >Nom/Prénom<span class="text-red-500">*</span></label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="email" class="block mb-2 font-semibold"
          >Email <span class="text-red-500">*</span></label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="phone" class="block mb-2 font-semibold"
          >Téléphone <span class="text-red-500">*</span></label
        >
        <input
          type="tel"
          id="phone"
          name="phone"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="adresse" class="block mb-2 font-semibold"
          >Adresse <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          id="adresse"
          name="adresse"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>
      <div>
        <label for="codePostal" class="block mb-2 font-semibold">
          Code postal <span class="text-red-500">*</span>
        </label>
        <input
          type="text"
          inputmode="numeric"
          pattern="[0-9]{5}"
          id="codePostal"
          name="codePostal"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="ville" class="block mb-2 font-semibold"
          >Ville <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          id="ville"
          name="ville"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="message" class="block mb-2 font-semibold"
          >Message <span class="text-red-500">*</span></label
        >
        <textarea
          id="message"
          name="message"
          required
          rows="6"
          class="w-full px-3 py-2 border border-gray-300 rounded-md resize-y
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        ></textarea>
      </div>

      <ImageContainer client:visible />
      <div
        class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg border
        border-gray-200 hover:border-blue-300 transition-colors"
      >
        <input
          type="checkbox"
          id="validite"
          name="validite"
          required
          class="w-5 h-5 text-blue-600 focus:outline-none bg-white
          border-gray-300 rounded focus:ring-2 focus:ring-blue-500
          focus:ring-offset-2 cursor-pointer transition-all
          hover:border-blue-400"
        />
        <label
          for="validite"
          class="flex items-center h-5 text-sm text-gray-700 cursor-pointer
          select-none"
        >
          J'atteste de l'exactitude des informations soumises&nbsp;<span
            class="text-red-500">*</span
          >
        </label>
      </div>

      <div class="p-4 bg-blue-50 rounded-lg border border-blue-200">
        <p class="text-sm text-gray-700">
          Vous pouvez dès à présent prendre connaissance de mes
          <a
            href="/cgv-fixmycard.pdf"
            class="text-blue-600 hover:text-blue-800 underline font-medium"
            target="_blank"
            rel="noopener noreferrer"
          >
            conditions générales de vente et politique de confidentialité
          </a>.
        </p>
      </div>

      <FormSubmitHandler client:idle />
    </form>
  </div>
</div>

<script>
  const checkStatus = async () => {
    const loadingDiv = document.getElementById('status-loading')
    const openDiv = document.getElementById('status-open')
    const closedDiv = document.getElementById('status-closed')

    if (!loadingDiv || !openDiv || !closedDiv) return

    try {
      const response = await fetch('/.netlify/functions/get-status')

      if (response.ok) {
        const data = await response.json()
        if (data.isOpen) {
          openDiv.classList.remove('hidden')
        } else {
          closedDiv.classList.remove('hidden')
        }
      } else {
        closedDiv.classList.remove('hidden')
      }
    } catch (e) {
      closedDiv.classList.remove('hidden')
    } finally {
      loadingDiv.classList.add('hidden')
    }
  }

  document.addEventListener('astro:page-load', checkStatus)
</script>
