---
import ImageContainer from './images-container.tsx'
import FormSubmitHandler from './form-submit-handler.tsx'
import OrderStatusChecker from './order-status-checker.tsx'
---

<div class="container mx-auto px-4 xl:px-80 py-8 pt-6 min-h-full">
  <h1 class="text-3xl font-bold mb-6">Contactez-moi</h1>
  <OrderStatusChecker client:only="solid-js">
    <p class="mb-6">
      Je vous ferais parvenir un devis dans les plus brefs délais
    </p>

    <form
      id="devis-form"
      name="contact"
      method="POST"
      enctype="multipart/form-data"
      class="space-y-6"
    >
      <input type="hidden" name="form-name" value="contact" />

      <div>
        <label for="name" class="block mb-2 font-semibold"
          >Nom Prénom<span class="text-red-500">*</span></label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="email" class="block mb-2 font-semibold"
          >Email <span class="text-red-500">*</span></label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="adresse" class="block mb-2 font-semibold"
          >Adresse <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          id="adresse"
          name="adresse"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>
      <div>
        <label for="codePostal" class="block mb-2 font-semibold">
          Code Postal <span class="text-red-500">*</span>
        </label>
        <input
          type="text"
          inputmode="numeric"
          pattern="[0-9]{5}"
          id="codePostal"
          name="codePostal"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="ville" class="block mb-2 font-semibold"
          >Ville <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          id="ville"
          name="ville"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="message" class="block mb-2 font-semibold"
          >Message <span class="text-red-500">*</span></label
        >
        <textarea
          id="message"
          name="message"
          required
          rows="6"
          class="w-full px-3 py-2 border border-gray-300 rounded-md resize-y
          focus:outline-none focus:ring-2 focus:ring-blue-500"
        ></textarea>
      </div>

      <ImageContainer client:visible />
      <div
        class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg border
        border-gray-200 hover:border-blue-300 transition-colors"
      >
        <input
          type="checkbox"
          id="validite"
          name="validite"
          required
          class="w-5 h-5 text-blue-600 focus:outline-none bg-white
          border-gray-300 rounded focus:ring-2 focus:ring-blue-500
          focus:ring-offset-2 cursor-pointer transition-all
          hover:border-blue-400"
        />
        <label
          for="validite"
          class="flex items-center h-5 text-sm text-gray-700 cursor-pointer
          select-none"
        >
          J'atteste de l'exactitude des informations soumises&nbsp;<span
            class="text-red-500">*</span
          >
        </label>
      </div>

      <div class="p-4 bg-blue-50 rounded-lg border border-blue-200">
        <p class="text-sm text-gray-700">
          Vous pouvez dès à présent prendre connaissance de nos
          <a
            href="/cgv-fixmycard.pdf"
            class="text-blue-600 hover:text-blue-800 underline font-medium"
            target="_blank"
            rel="noopener noreferrer"
          >
            conditions générales de vente et politique de confidentialité
          </a>.
        </p>
      </div>

      <FormSubmitHandler client:idle />
    </form>
  </OrderStatusChecker>
</div>
